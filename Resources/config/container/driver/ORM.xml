<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
	    <parameter key="sylius_catalog.manager.category.class">Sylius\Bundle\CatalogBundle\Entity\CategoryManager</parameter>
	</parameters>
	
	<services>
	    <service id="sylius_catalog.manager.category" class="%sylius_catalog.manager.category.class%">
	        <argument type="service" id="doctrine.orm.default_entity_manager" />
	        <argument>%sylius_catalog.model.category.class%</argument>
	    </service>
	</services>

</container>
